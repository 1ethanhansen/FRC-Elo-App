<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".runMatch1">

    <TextView
            android:text="Enter the team # in RED alliance station 1"
            android:layout_width="359dp"
            android:layout_height="79dp"
            android:textColor="@color/colorText"
            android:id="@+id/tv_prompt"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:textSize="30sp" android:layout_marginTop="24dp" android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="team #"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorPrimary"
            android:ems="10"
            android:id="@+id/et_input" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_prompt"/>
    <Button
            android:text="Enter"
            android:onClick="teamEntered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/but_enter"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/tv_prompt"
            app:layout_constraintStart_toEndOf="@+id/et_input" android:layout_marginStart="24dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="team name"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorPrimary"
            android:ems="10"
            android:id="@+id/et_input2" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/et_input"
            android:visibility="visible"/>
    <TextView
            android:text="Red Alliance"
            android:textColor="@color/colorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_red_label"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:textSize="24sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/et_input2"/>
    <TextView
            android:text="TextView"
            android:textColor="@color/colorText"
            android:layout_width="330dp"
            android:layout_height="100dp"
            android:id="@+id/tv_red_teams" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_red_label" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text="TextView"
            android:textColor="@color/colorText"
            android:layout_width="330dp"
            android:layout_height="100dp"
            android:id="@+id/tv_blue_teams"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_blue_label"/>
    <TextView
            android:text="Blue Alliance"
            android:textColor="@color/colorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_blue_label" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_red_teams" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:textSize="24sp"/>
</android.support.constraint.ConstraintLayout>