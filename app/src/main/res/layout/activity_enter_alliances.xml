<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        tools:context=".EnterAlliances">

    <TextView
            android:text="Enter alliance #1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_alliances_prompt"
            android:textColor="@color/colorText" android:textSize="30sp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:hint="team #"
            android:textColorHint="@color/colorPrimary"
            android:ems="10"
            android:id="@+id/et_alliance_team_num" android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_alliances_prompt" android:textColor="@color/colorText"/>
    <Button
            android:text="Enter"
            android:onClick="addAlliance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/but_enter_alliance" app:layout_constraintStart_toEndOf="@+id/et_alliance_team_num"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="@+id/et_alliance_team_num"/>
    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/et_alliance_team_num"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            tools:divider="@color/colorText">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:orientation="vertical">
            <TextView
                    android:text="1:\t2910\n\t\t2930\n\t\t2046\n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_alliance_list_one"
                    android:textSize="24sp" android:textColor="@color/colorText"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_blank_one"
                    android:text="\t\t\t\t\t\t\t\t\t\t\t"/>
            <TextView
                    android:text="1:\t2910\n\t\t2930\n\t\t2046\n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_alliance_list_five"
                    android:textSize="24sp" android:textColor="@color/colorText"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="1:\t2910\n\t\t2930\n\t\t2046\n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_alliance_list_two"
                    android:textSize="24sp" android:textColor="@color/colorText"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_blank_one3"/>
            <TextView
                    android:text="1:\t2910\n\t\t2930\n\t\t2046"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_alliance_list_six"
                    android:textSize="24sp" android:textColor="@color/colorText"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="1:\t2910\n\t\t2930\n\t\t2046\n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_alliance_list_three"
                    android:textSize="24sp" android:textColor="@color/colorText"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_blank_one2"/>
            <TextView
                    android:text="1:\t2910\n\t\t2930\n\t\t2046"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_alliance_list_seven"
                    android:textSize="24sp" android:textColor="@color/colorText"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView
                    android:text="1:\t2910\n\t\t2930\n\t\t2046\n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_alliance_list_four"
                    android:textSize="24sp" android:textColor="@color/colorText"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_blank_one4"
            />
            <TextView
                    android:text="1:\t2910\n\t\t2930\n\t\t2046"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_alliance_list_eight"
                    android:textSize="24sp" android:textColor="@color/colorText"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>